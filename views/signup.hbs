{{> docheader}}
<div class="container my-5 mx-auto">
  <div class="row">
    <div class="col-sm-10 col-lg-8 mx-auto">

  <form class="user-form" action="/signup" method="post">
    <div class="form-group">
      <div class="row py-3">
        <div class="col-6 text-center mx-auto">
          <h2>Sign Up</h2>
        </div>
      </div>
      <div class="row">
        <div id="error" class="col-6 mx-auto">
        </div>
      </div>
      <div class="row py-3">
        <div class="col-6 mx-auto">
          <label for="username">Username</label>
          <input class="form-control" id="username" type="text" name="username" placeholder="Username">
        </div>
        <div class="col-6 mx-auto">
          <label for="displayName">Display Name</label>
          <input class="form-control" id="displayName" type="text" name="displayName" placeholder="Display Name">
        </div>
      </div>
      <div class="row py-3">
        <div class="col-6 mx-auto">
          <label for="email">Email</label>
          <input class="form-control" id="email" type="email" name="email" placeholder="Email">
        </div>
        <div class="col-6 mx-auto">
          <label for="email2">Confirm Email</label>
          <input class="form-control" id="email2" type="email" name="email2" placeholder="Confirm Email">
        </div>
      </div>
      <div class="row py-3">
        <div class="col-6 mx-auto">
          <label for="password">Password</label>
          <input class="form-control" id="password" type="password" name="password" placeholder="Password">
        </div>
        <div class="col-6 mx-auto">
          <label for="password2">Confirm Password</label>
          <input class="form-control" id="password2" type="password" name="password2" placeholder="Confirm Password">
        </div>
      </div>
      <div class="row py-3">
        <div class="col-6 mx-auto">
          <a href="#" onclick=signup() class="btn btn-outline-success btn-block" id="submit" name="submit">Sign Up</a>
        </div>
      </div>
      <div class="row py-3">
        <div class="col-8 mx-auto text-center">
          <a href="/login">Already have an account?</a>
        </div>
      </div>
    </div>
  </form>

    </div>
  </div>
</div>

{{> scripts}}
{{> docfooter}}
