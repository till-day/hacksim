{{> docheader}}
<div class="container my-5 mx-auto">
  <div class="row">
    <div class="col-sm-10 col-lg-8 mx-auto">

  <form class="user-form" action="/signup" method="post">
    <div class="form-group">
      <div class="row py-3">
        <div class="col-6 text-center mx-auto">
          <h2>Login</h2>
        </div>
      </div>
      <div class="row">
        <div id="error" class="col-6 mx-auto">
        </div>
      </div>
      <div class="row py-3">
        <div class="col-8 mx-auto">
          <label for="username">Username</label>
          <input class="form-control" id="username" type="text" name="username" placeholder="Username">
        </div>

      </div>

      <div class="row py-3">
        <div class="col-8 mx-auto">
          <label for="password">Password</label>
          <input class="form-control" id="password" type="password" name="password" placeholder="Password">
        </div>
      </div>
      <div class="row py-3">
        <div class="col-8 mx-auto">
          <a href="#" onclick=login() class="btn btn-outline-success btn-block" id="submit" name="submit">Log in</a>
        </div>
      </div>
      <div class="row py-3">
        <div class="col-8 mx-auto text-center">
          <a href="/signup">Don't have an account? Sign up Today!</a>
        </div>
      </div>
    </div>
  </form>

    </div>
  </div>
</div>

{{> scripts}}
{{> docfooter}}
